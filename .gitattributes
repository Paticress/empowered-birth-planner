
# Set default behavior to automatically normalize line endings
* text=auto

# JS and TS files should always use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# CSS files should use LF
*.css text eol=lf
*.scss text eol=lf

# HTML files should use LF
*.html text eol=lf

# JSON files should use LF
*.json text eol=lf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Force GitHub to use LF line endings
.gitattributes text eol=lf
.gitignore text eol=lf
*.md text eol=lf
